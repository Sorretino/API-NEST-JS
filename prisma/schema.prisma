generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Book {
  id          String @id @default(uuid())
  title       String
  description String
  bar_code    String @unique

  @@map("books")
}

model Post {
  id               String @id @default(uuid())
  title            String
  description      String
  description_long String
  urlimage         String
  url              String

  @@map("posts")
}
