generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Company {
  id          String @id @default(uuid())
  title       String
  description String
  paragraph   String
  object      String
  solution    String
  urlimage    String
  url         String
  color       String

  @@map("companys")
}

model Menu {
  id    String @id @default(uuid())
  title String
  url   String

  @@map("menus")
}

model Workgallery {
  id         String @id @default(uuid())
  title      String
  image      String
  id_company String

  @@map("workgallerys")
}

model Book {
  id          String @id @default(uuid())
  title       String
  description String
  bar_code    String @unique

  @@map("books")
}

model Post {
  id               String @id @default(uuid())
  title            String
  description      String
  description_long String
  urlimage         String
  url              String

  @@map("posts")
}
